- provide(:title, t('.title'))

- content_for :sidebar_body do
  - @manages.each do |manage|
    = link_to manage.title, manage_path(manage), :class => "list-group-item text-dark"

- content_for :content_body do
  %h5.text-center.mt-3
    = @manage.title
  -#
    %p.text-center
    %small
      = "发布时间: " +  @manage.created_at.strftime('%Y-%m-%d')
  %hr
  = @manage.content.nil? ? '' : @manage.content.html_safe
    

= render "layouts/control_panel"
