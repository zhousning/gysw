                %li.py-1.text-dark
                  .row
                    .col-7.col-sm-8.text-truncate
                      = link_to notice.title, notice_path(notice), :class => "text-body"
                    .col-5.col-sm-4
                      %p.text-muted.text-right.font-weight-light.mb-0
                        = notice.pdt_date.strftime('%Y-%m-%d')
      .col-sm-6.mb-3
