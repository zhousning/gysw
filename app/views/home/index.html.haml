- provide(:title, t('.title'))

-#
  .container.home-index
  .row
    .col-12
      %h2
        找比中
    .col-12
      #custom-search-input
        .input-group
          %input.search-query.form-control{:placeholder => "", :type => "text"}/
          %span.input-group-btn
            %button{:disabled => "disabled", :type => "button"}
              %span.fa.fa-search
%section.mt-4
  .container.py-2.bg-white
    .row
      -#
        .col-3
          .card.rounded-0.border-0
            -#
              .card-header.bg-white.text-primary.p-2
                业务办理地址
            .card-body.p-0
              %ul.list-group.list-group-flush
                %li.list-group-item.py-e.bg-2eacce.text-white
                  %p
                    崇文新区东门南梁山水务客服中心
                  客服热线:7360555
                %li.list-group-item.py-3.bg-2eacce.text-white
                  %p
                    新城政务中心服务大厅梁山水务业务办理窗口
                  客服热线:7366767
      .col-12
        %main{:role => "main"}
          #carouselExampleIndicators.carousel.slide{"data-ride" => "carousel"}
            %ol.carousel-indicators
              - @carousels.each_with_index do |c, i|          
                %li{:class => i == 0 ? "active" : '', "data-slide-to" => i.to_s, "data-target" => "#carouselExampleIndicators"}
            .carousel-inner.rounded-0
              - @carousels.each_with_index do |c, i|          
                .carousel-item{:class => i == 0 ? "active" : ''}
                  = image_tag c.photo, :class => "d-block w-100"
            %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselExampleIndicators", :role => "button"}
              %span.carousel-control-prev-icon{"aria-hidden" => "true"}
              %span.sr-only Previous
            %a.carousel-control-next{"data-slide" => "next", :href => "#carouselExampleIndicators", :role => "button"}
              %span.carousel-control-next-icon{"aria-hidden" => "true"}
              %span.sr-only Next
      -#
        .col-12.col-sm-3
        .row
          .col-12
            = image_tag "swhms.png", :class => "d-block w-100"
          .col-6.pl-0
            .border.text-center.pt-4.mb-2.py-2.bg-info
              = link_to result_path(@results[0]) do 
                %p.mb-0
                  %i.fa.fa-group.fa-4x.text-white
                %p.mb-0.text-white
                  我的用水
            .border.text-center.pt-4.py-2.bg-primary
              = link_to result_path(@results[1]) do 
                %p.mb-0
                  %i.fa.fa-id-badge.fa-4x.text-white
                %p.mb-0.text-white
                  水费查询
          .col-6.pl-0
            .border.d-flex.justify-content-center.align-items-center.py-3.mb-1.bg-success
              = link_to result_path(@results[2]) do 
                %p.mb-0
                  %i.fa.fa-user.text-white
                    办理指南
            .border.d-flex.justify-content-center.align-items-center.py-3.mb-1.bg-warning
              = link_to result_path(@results[3]) do 
                %p.mb-0
                  %i.fa.fa-list.text-white
                    服务网点
            .border.d-flex.justify-content-center.align-items-center.py-3.mb-1.bg-dark
              = link_to result_path(@results[4]) do 
                %p.mb-0
                  %i.fa.fa-mobile.text-white
                    用户报装
            .border.d-flex.justify-content-center.align-items-center.py-3.mb-1.bg-danger
              = link_to result_path(@results[5]) do 
                %p.mb-0
                  %i.fa.fa-map.text-white
                    网上缴费

%section.mt-3
  .container
    -#
      .row.mb-3
      .col-12
        = image_tag "syhf.jpg", :class => "w-100"
    .row
      .col-sm-6.mb-3
        .card.rounded-0
          .card-header.rounded-0.p-2.qijianbox-title
            通知公告
